                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgv_shorcuts_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/baseline_more_horiz_24" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shortcuts"/>
                        <TextView
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The things you need, one tap away"
                            />

                        <TextView
                            android:layout_margin="10dp"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="Fast access to your lists of Issues, Pull Requests, or Discussions."
                            />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_box"
                                >

                                <TextView
                                    android:id="@+id/tv_get_started"
                                    android:selectAllOnFocus="false"
                                    android:linksClickable="false"
                                    android:autoLink="all"
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="#2963CD"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/your_text_reference2"/>

                            </FrameLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
